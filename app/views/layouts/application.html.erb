<!DOCTYPE html>
<html>
<head>
  <title>Sayings</title>
  <%= stylesheet_link_tag "application" %>
  <script type="text/javascript" src="//use.typekit.net/uab3uxn.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrap">
    <div id="nav">
    </div>
    <div id="main">
      <div id="header">
        <h1>Decomposite</h1>
        <div id='account'></div>
        <div id='user'></div>
      </div>

      <div id='back-link'></div>
      <div id='exchanges'>
        <%= yield %>
      </div>
    </div>
  </div>
  <%= javascript_include_tag "application" %>
  <%= javascript_tag do %>
    $( document ).ready( function() {
      Sayings.init( <%== Rabl::Renderer.json current_user_session, 'user_sessions/show' %> );
    } );
  <% end %>
</body>
</html>
